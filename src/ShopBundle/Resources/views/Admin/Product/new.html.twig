{% extends 'ShopBundle:Admin:base.html.twig' %}

{% block content %}
    <h1>Product creation</h1>
    <hr>
    {{ form_start(form) }}
    {% form_theme form.images "ShopBundle:Admin/Form:product_form_layout.html.twig" %}
        {{ form_widget(form) }}
    {{ form_end(form) }}
    <hr>
    <ul class="list-inline">
        <li>
            <a href="{{ path('shop_admin_product_index') }}" class="btn btn-sm btn-default">
                Back to the list
            </a>
        </li>
    </ul>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/shop/js/product-images.js') }}"></script>
{% endblock %}
